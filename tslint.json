{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    // Custom
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
    "interface-name": [false, "always-prefix"],
    "one-line": [true, "check-whitespace"],
    "curly": [false],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "member-access": [true, "no-public"],
    "member-ordering": false,
    "max-classes-per-file": false,
    "space-before-function-paren": false,
    "new-parens": false,
    "one-variable-per-declaration": false,
    // Angular 2
    "component-class-suffix": [true, "Com"],
    // "component-selector": [true, "element", "my", "kebab-case"],
    "directive-class-suffix": [true, "Dir"],
    // "directive-selector": [true, "attribute", "my", "camelCase"],
    "import-spacing": false,
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "only-arrow-functions": false,
    "pipe-naming": [true, "camelCase", "my"],
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    // General
    "no-console": [true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      120
    ],
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
